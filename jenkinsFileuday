pipeline {
    agent any

    environment {
        MAVEN_HOME = tool 'Maven 3.8.5'
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/your-username/your-repo.git'
            }
        }

        stage('Build with Maven') {
            steps {
                sh "${MAVEN_HOME}/bin/mvn clean package"
            }
        }

        stage('Install Tomcat with Ansible') {
            steps {
                dir('ansible') {
                    sh 'ansible-playbook -i inventory.ini install_tomcat.yml'
                }
            }
        }

        stage('Deploy WAR with Ansible') {
            steps {
                dir('ansible') {
                    sh 'ansible-playbook -i inventory.ini deploy_war.yml'
                }
            }
        }
    }

    post {
        success {
            echo 'Deployment successful!'
        }
        failure {
            echo 'Deployment failed.'
        }
    }
}

