---
- name: Install Tomcat 9 on Application Node
  hosts: app_servers
  become: yes

  tasks:
    - name: Install required packages
      apt:
        name: "{{ item }}"
        state: present
      loop:
        - default-jdk
        - wget
        - unzip

    - name: Create tomcat user
      user:
        name: tomcat
        shell: /bin/false

    - name: Download Tomcat
      get_url:
        url: https://downloads.apache.org/tomcat/tomcat-9/v9.0.85/bin/apache-tomcat-9.0.85.tar.gz
        dest: /tmp/tomcat.tar.gz

    - name: Extract Tomcat
      unarchive:
        src: /tmp/tomcat.tar.gz
        dest: /opt/
        remote_src: yes

    - name: Rename tomcat directory
      command: mv /opt/apache-tomcat-9.0.85 /opt/tomcat

    - name: Change ownership
      file:
        path: /opt/tomcat
        owner: tomcat
        group: tomcat
        recurse: yes

    - name: Start Tomcat
      shell: nohup /opt/tomcat/bin/startup.sh &
